{{!-- <h1>step One: {{stepOne}}</h1><br>
<h1>step Two: {{stepTwo}}</h1><br>
<h1>step Three: {{stepThree}}</h1><br>
<h1>blog : {{blogCreated}}</h1>
--}}

<div class="gh-flow">

    <header class="gh-flow-head">
        <nav class="gh-flow-nav">
            {{#if stepTwo}}
                {{#link-to "setup.one" classNames="gh-flow-back"}}<i class="icon-arrow-left"></i> Back{{/link-to}}
            {{/if}}
            {{#if stepThree}}
                {{#link-to "setup.two" classNames="gh-flow-back"}}<i class="icon-arrow-left"></i> Back{{/link-to}}
            {{/if}}
            <ol>
                {{#gh-activating-list-item route="setup.one" linkClasses="step"}}
                    <i class="icon-check"></i><span class="num">1</span>
                {{/gh-activating-list-item}}
                <li class="divider"></li>
                {{#gh-activating-list-item route="setup.two" linkClasses="step"}}
                    <i class="icon-check"></i><span class="num">2</span>
                {{/gh-activating-list-item}}
                <li class="divider"></li>
                {{#if stepTwo}}
                    {{#if blogCreated}}
                        {{#gh-activating-list-item route="setup.three" linkClasses="step"}}
                            <i class="icon-check"></i><span class="num">3</span>
                        {{/gh-activating-list-item}}
                    {{else}}
                        <li><a type="submit" class="step"><i class="icon-check"></i><span class="num">3</span></a></li>
                    {{/if}}
                {{else}}
                    {{#if stepOne}}
                        <li><i class="icon-check"></i><span class="num">3</span></li>
                    {{else}}
                        {{#gh-activating-list-item route="setup.three" linkClasses="step"}}
                            <i class="icon-check"></i><span class="num">3</span>
                        {{/gh-activating-list-item}}
                    {{/if}}

                {{/if}}
            </ol>
        </nav>
    </header>
    <div class="gh-flow-content-wrap">
        <section class="gh-flow-content">
            {{outlet}}
        </section>
    </div>

</div>
